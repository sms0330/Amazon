<% if @product.errors.any? %>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model:@product, local: true do |form|%>
<div>
    <%= form.label :title%>
    <br>
    <%= form.text_field :title%>
</div>
<div>
    <%= form.label :description%>
    <br>
    <%= form.text_area :description%>
</div>
<div>
    <%= form.label :price%>
    <br>
    <%= form.text_field :price%>
</div>
<br>
<div>
    <%= form.submit%>
</div>

<% end %>